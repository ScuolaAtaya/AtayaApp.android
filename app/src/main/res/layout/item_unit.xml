<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    tools:cardBackgroundColor="@color/presentazione">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="26dp"
        android:paddingEnd="8dp"
        android:paddingBottom="36dp">

        <FrameLayout
            android:layout_width="@dimen/card_image_size"
            android:layout_height="@dimen/card_image_size">

            <ImageView
                android:id="@+id/item_unit_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:scaleType="centerInside"
                tools:src="@drawable/presentazione" />

            <ImageView
                android:id="@+id/item_unit_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="@string/done"
                android:src="@drawable/check"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_unit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/figtree"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="@string/presentazione" />
    </LinearLayout>
</androidx.cardview.widget.CardView>