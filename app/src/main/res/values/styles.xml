<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/backgroundGrey</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="UnitTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/backgroundGrey</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundGrey</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_logo</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="ToolbarUnitTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ButtonNext" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/lightGreen</item>
        <item name="colorControlNormal">@color/lightGreen</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonListen" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/lightBlue</item>
        <item name="colorControlNormal">@color/lightBlue</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>